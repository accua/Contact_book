<h1>Contact Book</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <ul>
        <% @contacts.each() do |contact| %>
        <li><a href="contacts/<%= contact.id() %>"><%= contact.fname() %> <%= contact.lname() %></a> <%=contact.company() %> <%=contact.title() %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-4">
      <form action="/" method="post">
        <div class="form-group">
          <label for="fname"></label>
          <input class="form-control" id="fname" type="text" name="fname" placeholder="First name">
        </div>
        <div class="form-group">
          <label for="lname"></label>
          <input class="form-control" id="lname" type="text" name="lname" placeholder="Last name">
        </div>
        <div class="form-group">
          <label for="company"></label>
          <input class="form-control" id="company" type="text" name="company" placeholder="Company">
        </div>
        <div class="form-group">
          <label for="title"></label>
          <input class="form-control" id="title" type="text" name="title" placeholder="Title">
        </div>
        <button class="btn btn-danger" id="new_contact_button" type="submit">Create new contact</button>
      </form>
    </div>
  </div>
</div>
